        <field name="model">mews.pos.installment.calculator.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="amount"/>
                        <field name="bank_id"/>
                        <field name="category_id"/>
                    </group>
                </group>
                <separator string="Taksit SeÃ§enekleri"/>
                <field name="result_html" readonly="1" nolabel="1"/>
